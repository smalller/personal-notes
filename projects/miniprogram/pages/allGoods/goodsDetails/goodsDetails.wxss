.goods_brief {
  padding: 0 24rpx;
}

.banner {
  height: 362rpx;
}

.goods_name {
  font-size: 36rpx;
  font-weight: bold;
  margin: 24rpx 0 12rpx 0;
}

.goods_num {
  width: 68rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  border-radius: 6rpx;
  background: linear-gradient(to right, #FEE140, #FB9E74);
  font-size: 24rpx;
  color: #FFFFFF;
}

.sell_pic {
  display: flex;
  font-size: 36rpx;
}

.sell_pic .old_pic {
  color: #ccc;
  margin-left: 30rpx;
  text-decoration: line-through;
}

.sell_num {
  font-size: 24rpx;
  margin: 12rpx 0;
}

.num_al {
  margin-left: 250rpx;
  width: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.num_al1 {
  margin-left: 250rpx;
  width: 120rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.num_al .iconfont{
  font-size: 28rpx;
}
.num_al1 .iconfont{
  font-size: 28rpx;
}
.num_al image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}
.num_al1 image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.num_al text {
  font-size: 28rpx;
}

.details {
  padding: 0 24rpx;
  margin: 24rpx 0 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.details_content {
  padding-left: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.meal {
  padding-left: 24rpx;
  margin: 24rpx 0 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.meal_box{
font-size: 28rpx;
text-align: center;
padding: 0 24rpx;
display: flex;
flex-wrap: wrap;
margin-bottom: 98rpx;
}
.meal_box .small_box{
  width: 340rpx;
  height: 120rpx;
  background-color: #f1f1f1;
  border-radius: 15rpx;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.meal_box .small_box:nth-child(2n-1){
  margin-right: 22rpx;
}
.footer{
  width: 100%;
  background-color: #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;

}
.footer .foot_one text:nth-child(1){
  margin: 0 24rpx;
}
.footer .foot_one text:nth-child(2){
font-size: 28rpx;
font-weight: 600;
}
.footer image{
  width: 48rpx;
  height: 44rpx;
  margin-right: 36rpx;
  vertical-align: middle;
}
.footer .foot_two{
  position: relative;
}
.footer .foot_two text:nth-child(2){
  display: inline-block;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 36rpx;
  width: 252rpx;
  height: 98rpx;
  background: linear-gradient(to right,#FEE140, #FB9E74);
}
.footer .foot_two text:nth-child(3){
  padding: 3rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #FF3636;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  line-height: 24rpx;
  position: absolute;
  left: 31rpx;
  top: 26rpx;
}