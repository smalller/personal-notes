page{
    background: #0E0E11;
}
.content{
    padding: 32rpx;
}

.bg2{
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index:1;
  }
.bg2 image{
    width: 100%;
    height: 100%;
}
.card_li{
    position: relative;
    height: 334rpx;
    width: 100%;
    border-radius: 8rpx;
    margin: 0 auto;
    margin-bottom: 32rpx;
}
.card_name{
    color:#FFFFFF ;
    font-size: 30rpx;
    margin-bottom: 4rpx;
    word-break: break-all;
}
.card_content{
    z-index: 2;
    width: 100%;
    position: absolute;
}
.integral{
    color: #FFFFFF;
    font-size:28rpx;
    position: absolute;
    left: 30rpx;
    bottom: 32rpx;
    z-index:2;
}
.store_logo{
    height: 88rpx;
    width: 88rpx;
    border-radius: 50%;
}
.cll{
    flex: .18;
    padding: 32rpx 0 0 30rpx;
}
.clr{
    flex: .82;
    padding-top: 44rpx;
    padding-right: 20rpx;
}
.txt{
    font-size: 24rpx;
    color: #A59872;
    margin-left: 12rpx;
}

.card_main{
    color: #FFFFFF;
    font-size: 24rpx;
    word-break: break-all;
}
.vip_word{
    position: absolute;
    width: 46rpx;
    top: 40rpx;
    right: 30rpx;
    z-index: 2;
}
.explain{
    padding: 0 30rpx;
    margin: 60rpx 0;
}
.explain view{
    color: #A98A54;
    font-size: 26rpx;
    text-align: center;
    border-radius: 12rpx;
    background: #262732;
    padding: 32rpx 20rpx;
    word-break: break-all;
}
.instructions{
    color: white;
    position: relative;
    z-index: 2;
}
.title{
    font-size: 28rpx;
    margin-bottom: 16rpx;
}
.ptxt{
    margin-bottom: 16rpx;
    font-size: 24rpx;
}