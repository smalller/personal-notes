page{
    height: 100%;
}
.order{
    background: #0E0E11;
    height: 100%;
}
content{
    background: #0E0E11;
}
.header{
    background: #161823;
    position: fixed;
    top: 0;
    height:180rpx;
    /* height:80rpx; */
    width: 100%;
    left: 0;
}
.search{
    width: 622rpx;
    position: relative;
    height: 60rpx;
    border-radius: 60rpx;
    margin: 0 auto;
    margin-bottom: 32rpx;
}
.search .search_inp{
    height: 100%;
    background: #383A44;
    padding-left: 74rpx;
    font-size: 24rpx;
    border-radius: 60rpx;
    color: #9D9FA8;
}
.ser_icon{
    position: absolute;
    left: 18rpx;
    top: calc(50% - (60rpx - 30rpx)/2);
    height: 30rpx;
    width: 30rpx;
}
.active{
    background: #FFD204;
    height: 4rpx;
    width: 56rpx;
    border-radius: 4rpx;
    position: absolute;
    top: 50rpx;
}
.nav{
    position: relative;
    padding: 0 30rpx ;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.nav .nl{
    font-size: 28rpx;
    color: #9D9FA8;
}
.nav .on{
    color: #ffffff;
}
.main{
    /* header + 24 rpx */
    padding-top: 204rpx;
    /* padding-top: 104rpx; */
    background: #0E0E11;
    padding-bottom: 20rpx;
}
.olt{
    padding: 24rpx;
    background: #161823;
    margin-bottom: 24rpx;
}
.order_name{
    /* margin-bottom: 34rpx; */
}
.store{
    flex: .7;
}
.store .iconfont{
    display: inline-flex;
    color: #9D9FA8;
}
.i_ic{
    width: 28rpx;
    height: 26rpx;
    /* vertical-align: middle; */
}
.st_name{
    font-size: 32rpx;
    color: #FFFFFF;
    margin: 0 20rpx;
}
.white{
    color: #FFFFFF;
}
.redimp{
    color: #EF5954!important;
    font-size: 36rpx!important;
}
.state{
    font-size: 24rpx;
    flex: .3;
    text-align: right;
}
.gli{
    padding: 24rpx 0;
    font-size: 0;
    border-bottom: 2rpx solid #1D1F2F;
}
.good_img{
    flex: .2;
}
.good_img image{
    width: 116rpx;
    height: 116rpx;
    border-radius: 8rpx;
    border: 2rpx solid #2C3043;
    box-sizing: border-box;
}
.good_name{
    color: #FFFFFF;
    font-size: 26rpx;
    margin-bottom: 8rpx;
    font-weight: 400;
}
.good_js{
    font-size: 24rpx;
    color: #9D9FA8;
}
.info{
    flex: .55;
    padding-top: 8rpx;
}
.price_num{
    flex: .25;
    text-align: right;
}
.pri{
    font-size: 24rpx;
    color: #FFFFFF;
    margin-bottom: 8rpx;
}
.num{
    color: #8F95B4;
    font-size: 26rpx;
}
.num text{
    margin-left: 8rpx;
}
.tip{
    color: #EF5954;
    font-size: 24rpx;
    text-align: right;
    margin-bottom: 12rpx;
}
.explain{
    margin-top: 28rpx;
}
.dt_box{
    margin-bottom: 12rpx;
}
.dtt{
    color: #9D9FA8;
    font-size: 26rpx;
    flex: 1;
}
.dtp{
    font-size: 26rpx;
    flex: 1;
}
.actu_t,.actu_p{
    color: #FFFFFF;
    font-size: 30rpx;
    flex: 1;
}
.tr{
    text-align: right;
}
.tb{
    margin-top: 32rpx;
    text-align: right;
}
.tb .btn{
    font-size: 30rpx;
    padding: 6rpx 19rpx;
    border-radius: 4rpx;
    display: inline-block;
    margin-left: 24rpx;
}
.look_btn{
    color: #FACE15;
