page{
    background: #0E0E11;
}
.ktv{
    padding-top: 20rpx;
}
.daySelect{
    background: #202233;
    margin: 0 30rpx;
    border-radius: 8rpx;
    height: 222rpx;
    padding: 0 22rpx;
}
.daySelect .day_one{
    padding-top: 16rpx;
}
.daySelect .day_two{
    flex: .7;
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
}
.min_consume{
    flex: .6;
    font-size: 26rpx;
}
.min_consume text:nth-child(1){
    color: #C5C9E0;
}
.min_consume text:nth-child(2){
    color: #EF5954;
}
.make-top{
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
}
.make-month{
    display: flex;
    align-items: center;
}
.make-day{
    display: flex;
    align-items: center;
    position: relative;
}
.order-image{
    width:64rpx;
    height:64rpx;
    position:relative;
}
.order-image image{
    width:100%;
    height:100%;
}
.order-image text{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    font-size: 28rpx;
}
.month-text{
    font-size: 28rpx;
    font-weight: 600;
    color: #FFFFFF;
    flex: .4;
}
.split-image{
    width:6rpx;
    height:48rpx;
    margin-left:20rpx;
    margin-right:16rpx;
    border:1prx dashed #000000;
}
.split-image image{
    width:100%;
    height:100%;
}
.day-num{
    width:78rpx;
    height:98rpx;
    padding-top: 8rpx;
    text-align: center;
  }
  
.day-num view{
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}

.make-top-week{
    background: #fff;
    padding:12rpx 60rpx;
    display: flex;
    font-weight: 400;
    color: #000000;
    justify-content: space-between;
    align-content: center;
    font-size: 28rpx;
}
.cur_day{
    background: #2E3250;
    border-radius: 10rpx;
    color: #FACE15;
}
.cur-day{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF !important;
    font-size: 28rpx;
}
.not_day {
    color: #CACEDD;
}
/* 以上顶部 */
.ktv_list{
    background: #0E0E11;
    padding: 20rpx 30rpx 48rpx;
}
.kli{
    border-radius: 8rpx;
    margin-bottom: 20rpx;
    background: #161823;
}
.kli_l{
    flex: .35;
    font-size: 0;
}
.kli_r{
    flex: .65;
    padding-top: 8rpx;
    padding-left: 16rpx;
}
.big_img{
    width: 228rpx;
    height: 228rpx;
    border-radius: 8rpx;
}

.kli_r .name{
    font-size: 30rpx;
    margin-bottom: 16rpx;
    color: white;
}
.kli_r .num{
    font-size: 24rpx;
    color: #FFFFFF;
    margin-bottom: 16rpx;
}
.kli_r .tips{
    color: #9D9FA8;
    font-size: 24rpx;
    height: 44rpx;
}

.kli_r .min_price text{ 
    font-size: 32rpx;
    color: #EF5954;
}
.kli_r .min_price{ 
    font-size: 24rpx;
    color: #7D7F89;
}
