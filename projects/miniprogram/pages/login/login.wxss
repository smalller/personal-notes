page{
    height: 100%;
    width: 100%;
}
.login{
    height: 100%;
    width: 100%;
    background: #222222;
}
.box{
    height: calc(100% - 246rpx);
    padding: 170rpx 76rpx 76rpx;
}
.tip{
    color: #FFFFFF;
    font-size: 48rpx;
    margin-bottom: 48rpx;
}
.form .inp{
    height: 100rpx;
    border-radius: 100rpx;
    padding-left: 24rpx;
    color: white;
    font-size: 28rpx;
}
.code{
    width: 50%;
}
.cinp {
    position: relative;
    border-radius: 100rpx;
    border: 1px solid #FFFFFF;
    margin-bottom: 48rpx;
}
.cinp .g_cd{
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    right: 24rpx;
    top: 30rpx;
}
.text{
    font-size: 20rpx;
    color: #FFFFFF;
    margin-bottom: 24rpx;
    text-align: center;
}
.btn_v{
    text-align: center;
}
.btn{
    width: 400rpx;
    height: 100rpx;
}
.form .van-button--round{
    color: red;
}

.btm_c{
    position: fixed;
    bottom: 100rpx;
    width: calc(100% - 76rpx*2);

}