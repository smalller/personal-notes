page{
    background: #f5f5f5;
}
.top_main{
    background: #0E0E11;
    padding-bottom: 24rpx;
    margin-bottom: 24rpx;
    padding-top: 28rpx;
}
.store{
    display: flex;
}

.top_main::before{
    content: '';
    display: table;
}
.top_cont{
    position: relative;
}
.top_cont .iconfont{
    display:inline-flex;
    color: white;
    font-size:32rpx;
    padding: 0;
    margin: 0;
    width: 32rpx;
    height: 32rpx;
    background: none;
    line-height: 32rpx;
}
.top_cont .act_name{
    padding: 0 32rpx ;
    margin-top: 32rpx;
}
.top_cont .atit{
    font-size: 28rpx;
    color: white;
    margin: 0 0 8rpx 0;
}
.top_cont .atit text{
    font-size: 28rpx;
    color: #ffffff;
}
.top_cont .shop_name::after{
    content: ' ';
    height: 28rpx;
    width: 4rpx;
    background: #fff;
    display: inline-block;
    margin: 0 10rpx;
}
.top_cont .intro{
    color: #CBCBCC;
    font-size: 24rpx;
}
.aty_bnr{
    font-size: 0;
    padding:  0 24rpx;
    margin-bottom: 70rpx;
}
.aty_bnr .logo{
    width: 104rpx;
}
.aty_bnr .sif{
    flex: .85;
}
.aty_bnr .sif .name{
    font-size: 30rpx;
    color: #A4ACBE;
}
.aty_bnr .sif .time{
    color: #9D9FA8;
    font-size: 22rpx;
}
.aty_bnr .share {
    flex: .15;
    text-align: right;
}
.aty_bnr image{
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
}
.main{
    padding: 0 24rpx;
    word-break: break-all;
}

.rich_img{
    width: 200px;
    height: 200px;
}
.store_info{
    margin-top: 20rpx;
    padding-bottom: 50rpx;
    
}

.store_info .tis{
    width: 220rpx;
    height: 50rpx;
}
.st_box{
    margin-top: 10rpx;
    display: flex;
    padding: 8rpx;
    height: 104rpx;
    background: #000000;
    border: 2rpx solid #FFFFFF;
    border-radius: 6rpx;
}
.sl{
    width: 124rpx;
    height: 100%;
}
.sl image{
    width: 104rpx;
    height: 100%;
}
.sm{
    flex: .8;
    padding-top: 12rpx;
}
.sm .sn{
    color: #FFFFFF;
    font-size: 26rpx;
    margin-bottom: 8rpx;
}
.sm .sj{
    color: #C7C7C7;
    font-size: 22rpx;
}
.sr{
    flex: .2;
    text-align: right;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 20rpx;
}
.sr image{
    width: 12rpx;
    height: 24rpx;
}