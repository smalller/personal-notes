page{
  background: #161823;
}
.affirm .header {
  font-size: 36rpx;
  color: #FFFFFF;
  border-left: 14rpx solid #FACE15;
  padding: 7rpx 0 7rpx 34rpx;
  border-image: #FACE15 5;
}

.affirm .body {
  padding: 24rpx 0 50rpx 48rpx;
  font-size: 28rpx;
  color: #CACEDD;
  line-height: 40rpx;

}
.affirm .inp{
  display: flex;
  justify-content: center;
}
.affirm .inp input{
  width: 100rpx;
  text-align: center;
  border-bottom: 6rpx solid #000;
  border-image: #FACE15 15;
  margin-right: 40rpx;
}
.affirm .inp input:last-child{
  margin-right: 0;
}
.affirm .footer{
  margin-top: 60rpx;
  padding-right: 48rpx;
  text-align: right;
  display: flex;
  flex-direction: column;
}
.affirm .footer text:nth-child(1){
  font-size: 28rpx;
}
.affirm .footer text:nth-child(2){
  font-size: 28rpx;
  color: #999999;
  margin-top: 24rpx;
}
.on{
  color: #FFFFFF;
}
.off{
  color: #CACEDD;
}


/* 密码 */
.psw_bg{
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  height: 100%;
  width: 100%;
  z-index: 150;
}
.tips_psw{
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 48rpx;
}
.psw{
  font-size: 0;
  position: fixed;
  z-index: 151;
  width: 100%;
  bottom: 0;
}
.ipts{
  text-align: center;
}
.ipt_psw{
  width: 110rpx;
  height: 110rpx;
  border: 1px solid #979797;
  border-right: none;
  box-sizing: border-box;
  outline: none;
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
}
.ipt_psw:last-child{
  border-right: 1px solid #979797;
}
.ipt_psw::before{
  content: '';
  border: none;
}
.err_tip{
  font-size: 28rpx;
  margin-top: 24rpx;
  text-align: center;
}
.err_txt{
  color: red;
  margin-right: 40rpx;
}
.forget{
  color: #000;
  text-decoration: underline;
}

/* 密码弹窗 */
.keyboard {
  text-align: center;
  width: 100%;
}

.keyboard .inp {
  margin: 0 auto;
  width: 672rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
}

.keyboard .inp text {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  border-bottom: 6rpx solid #FACE15;
  border-image: #FACE15 15;
  margin-right: 40rpx;
  color: #FACE15;
}

.num_board {
  height: 432rpx;
  width: 100%;
  background-color: #D2D5DB;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  position: relative;
  padding-bottom: 28rpx;
}
.num_board .iconfont{
  font-size: 66rpx;
  color: #888;
  position: absolute;
  right: 104rpx;
  bottom: 28rpx;
}
.num_board .num_eng {
  width: 234rpx;
  height: 92rpx;
  background-color: #fff;
  box-shadow: 0px 1px 0px 0px #848688;
  border-radius: 10rpx;
  text-align: center;
  font-size: 50rpx;
  font-family: Helvetica;
  color: #000000;
  line-height: 92rpx;
}
.num_board .bg_btn{
  background-color: #f5f5f5;
}
.key_box{
  position: fixed;
  bottom: 0;
  border-radius: 14rpx 14rpx 0 0;
  background: #f5f5f5;
}
